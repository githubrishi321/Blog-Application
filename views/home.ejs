<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
    <title>Blogify - Share Your Stories</title>
</head>

<body>
  <%- include("./partials/nav") %>

    <div class="container">
      <div class="main-content mt-5">
        <!-- Hero Section -->
        <div class="hero-section">
          <h1 class="hero-title">
            <i class="fas fa-pen-fancy me-3"></i>Welcome to Blogify
          </h1>
          <p class="hero-subtitle">Share your thoughts, stories, and ideas with the world</p>
          <% if (locals.user) { %>
            <a href="/blog/add-new" class="btn btn-primary btn-lg">
              <i class="fas fa-plus me-2"></i>Create New Blog
            </a>
            <% } else { %>
              <a href="/user/signup" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-user-plus me-2"></i>Get Started
              </a>
              <a href="/user/signin" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
              </a>
              <% } %>
        </div>

        <!-- Stats Section -->
        <div class="row mb-5 justify-content-center">
          <div class="col-md-4 col-sm-6">
            <div class="stats-card">
              <div class="stats-number">
                <%= blogs.length %>
              </div>
              <div class="stats-label">Total Blogs</div>
            </div>
          </div>
        </div>

        <!-- Blogs Section -->
        <div class="row">
          <div class="col-12">
            <h2 class="blog-title mb-4">
              <i class="fas fa-newspaper me-3"></i>Latest Stories
            </h2>
          </div>
        </div>

        <div class="row">
          <% if (blogs.length===0) { %>
            <div class="col-12 text-center py-5">
              <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
              <h3 class="text-muted">No blogs yet</h3>
              <p class="text-muted">Be the first to share your story!</p>
              <% if (locals.user) { %>
                <a href="/blog/add-new" class="btn btn-primary">
                  <i class="fas fa-plus me-2"></i>Create First Blog
                </a>
                <% } else { %>
                  <a href="/user/signup" class="btn btn-primary">
                    <i class="fas fa-user-plus me-2"></i>Join and Create
                  </a>
                  <% } %>
            </div>
            <% } else { %>
              <% blogs.forEach(blog=> { %>
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 mb-4">
                  <div class="card h-100">
                    <% if (blog.coverImageURL) { %>
                      <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog cover"
                        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                      <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                        style="display: none; height: 200px;">
                        <i class="fas fa-image fa-2x text-muted"></i>
                      </div>
                      <% } else { %>
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                          style="height: 200px;">
                          <i class="fas fa-image fa-2x text-muted"></i>
                        </div>
                        <% } %>
                          <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-truncate">
                              <%= blog.title %>
                            </h5>
                            <p class="card-text text-muted flex-grow-1">
                              <%= blog.body.length> 120 ? blog.body.substring(0, 120) + '...' : blog.body %>
                            </p>
                            <div class="mt-auto">
                              <a href="/blog/<%= blog._id %>" class="btn btn-primary w-100">
                                <i class="fas fa-eye me-2"></i>Read More
                              </a>
                            </div>
                          </div>
                          <div class="card-footer bg-transparent border-0">
                            <small class="text-muted">
                              <i class="fas fa-calendar me-1"></i>
                              <%= new Date(blog.createdAt).toLocaleDateString() %>
                            </small>
                          </div>
                  </div>
                </div>
                <% }) %>
                  <% } %>
        </div>
      </div>
    </div>

    <%- include("./partials/scripts") %>
</body>

</html>