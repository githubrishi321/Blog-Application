<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container">
    <a class="navbar-brand" href="/">
      <i class="fas fa-pen-fancy me-2"></i>Blogify
    </a>
    
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">
            <i class="fas fa-home me-1"></i><span class="d-none d-sm-inline">Home</span>
          </a>
        </li>
      </ul>

      <ul class="navbar-nav">
        <% if (locals.user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/blog/add-new">
              <i class="fas fa-plus me-1"></i><span class="d-none d-sm-inline">Add Blog</span>
            </a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle d-flex align-items-center"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img src="<%= locals.user.profileImageURL %>" 
                   class="rounded-circle me-2" 
                   width="32" 
                   height="32" 
                   style="object-fit: cover;"
                   onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';" />
              <i class="fas fa-user-circle me-2" style="display: none;"></i>
              <span class="d-none d-md-inline"><%= locals.user.fullName || locals.user.email %></span>
            </a>



            
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <a class="dropdown-item" href="/user/logout">
                  <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
              </li>
            </ul>







          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/user/signup">
              <i class="fas fa-user-plus me-1"></i><span class="d-none d-sm-inline">Create Account</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/signin">
              <i class="fas fa-sign-in-alt me-1"></i><span class="d-none d-sm-inline">Sign In</span>
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<% if (locals.error) { %>
<div class="container mt-3">
  <div class="alert alert-danger" role="alert">
    <i class="fas fa-exclamation-triangle me-2"></i>
    <%= locals.error %>
  </div>
</div>
<% } %>